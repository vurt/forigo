newField2_click:function($event){
	var start=$view.start.getValue();
	var end=$view.end.getValue();
	
	$view.list.setParams({filters:{groupOP:'AND',rules:[{field:'lastHeartBeat',op:'gt',data:start},{field:'lastHeartBeat',op:'lt',data:end}]}});
},
*/

newField_change:function(){
	$view.list.setParams({group:$params.selectedGroup});
}</form:scripts>
</form:Form>
